<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/head_imageview"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginLeft="17dp"
        android:scaleType="fitXY"
        android:src="@drawable/img_default_document"
        android:background="@color/home_bg_light_color"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="74dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="17dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/home_text_deep_color"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/author_textview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="author"
                android:ellipsize="end"
                android:textColor="@color/home_text_light_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/time_textview"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="2015-06-09 12:00"
                android:gravity="right"
                android:textColor="@color/home_text_light_color"
                android:textSize="12sp" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>