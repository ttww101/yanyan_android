<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_bg_color"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/top_bar_height"
        android:background="@drawable/bg_top_image">

        <ImageButton
            android:id="@+id/button_back"
            android:layout_width="@dimen/top_bar_height"
            android:layout_height="@dimen/top_bar_height"
            android:background="@null"
            android:padding="7dp"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/title_login"
            android:textColor="@color/top_title_color"
            android:textSize="@dimen/top_title_size" />


    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fadingEdge="none"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:layout_marginTop="50dp"
                android:padding="7dp"
                android:scaleType="centerInside"
                android:src="@drawable/app_icon_big" />

            <ImageView
                android:layout_width="80dp"
                android:scaleType="fitCenter"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:src="@drawable/image_app_name"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="@string/login_text"
                android:textColor="@color/home_text_light_color"
                android:textSize="12sp" />


            <LinearLayout
                android:id="@+id/btn_login_qq"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/top_bar_height"
                android:layout_marginLeft="37dp"
                android:layout_marginRight="37dp"
                android:layout_marginTop="17dp"
                android:background="@drawable/bg_btn_login"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/icon_login_qq"></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17dp"
                    android:text="@string/user_login_qq"
                    android:textColor="@color/white_color"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageButton
                    android:id="@+id/btn_check"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/bg_icon_check"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    android:padding="7dp"
                    android:layout_marginLeft="37dp" />

                <TextView
                    android:id="@+id/user_agreement_view"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:text="@string/login_tips"
                    android:textColor="@color/orange_color"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>