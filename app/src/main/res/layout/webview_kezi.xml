<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/webViewPlaceholder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <WebView
                android:id="@+id/content_webview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/tool_footer_ll"></WebView>

            <LinearLayout
                android:id="@+id/tool_footer_ll"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom|end"
                android:background="@color/kezi_colorAccent"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageButton
                    android:id="@+id/tool_home"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:scaleType="center"
                    android:src="@drawable/kezi_ic_home_white_36dp" />

                <ImageButton
                    android:id="@+id/tool_back"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:scaleType="center"
                    android:src="@drawable/kezi_ic_arrow_back_white_36dp" />

                <ImageButton
                    android:id="@+id/tool_forward"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:scaleType="center"
                    android:src="@drawable/kezi_ic_arrow_forward_white_36dp" />

                <ImageButton
                    android:id="@+id/tool_refresh"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:scaleType="center"
                    android:src="@drawable/kezi_ic_loop_white_36dp" />

            </LinearLayout>

        </RelativeLayout>

        <ProgressBar
            android:id="@+id/webProgressBar"
            style="@android:style/Widget.DeviceDefault.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-7dp" />


    </RelativeLayout>

</LinearLayout>